<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drag_drop"
        android:layout_width="40dp"
        android:layout_height="match_parent"

        android:padding="12dp"
        android:src="@drawable/img_drag_drop"
        app:layout_constraintBottom_toBottomOf="@+id/tv_seleceted_category_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_seleceted_category_name" />

    <TextView
        android:id="@+id/tv_seleceted_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:fontFamily="@font/tauri_regular"
        android:maxLines="1"
        android:text="sample video name"
        android:textColor="@color/deep_dark_brown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/close_image_button"
        app:layout_constraintStart_toEndOf="@id/drag_drop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_image_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/img_cross"
        app:layout_constraintBottom_toBottomOf="@+id/tv_seleceted_category_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_seleceted_category_name"
        app:layout_constraintVertical_bias="0.523" />


</androidx.constraintlayout.widget.ConstraintLayout>